<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/skyBlue"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_text"
            android:text="@string/pending"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_title"
            android:text="@string/pending"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_text">

            <TextView
                android:id="@+id/item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/pending" />
            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                android:text="@string/status" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/but_check_in"
                android:text="@string/checkin"
                android:textSize="@dimen/_10sp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/rect_round_bg"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_15dp"
                android:paddingEnd="@dimen/_15dp"
                android:gravity="center"
                android:paddingTop="@dimen/_2dp"
                android:paddingBottom="@dimen/_2dp"
                android:layout_below="@+id/item_status" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_pickup"
                android:text="@string/pickup"
                android:layout_below="@+id/item_detail" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_pickup_date"
                android:text="21-09-1989"
                android:layout_below="@+id/item_pickup" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel1">

            <TextView
                android:id="@+id/item_detail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/pending" />
            <TextView
                android:id="@+id/item_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                android:text="@string/status" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_check_in1"
                android:text="@string/checkin"
                android:textSize="@dimen/_10sp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/rect_round_bg"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_15dp"
                android:paddingEnd="@dimen/_15dp"
                android:gravity="center"
                android:paddingTop="@dimen/_2dp"
                android:paddingBottom="@dimen/_2dp"
                android:layout_below="@+id/item_status1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_pickup1"
                android:text="@string/pickup"
                android:layout_below="@+id/item_detail1" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_pickup_date1"
                android:text="21-01-1989"
                android:layout_below="@+id/item_pickup1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel2">

            <TextView
                android:id="@+id/item_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/pending" />
            <TextView
                android:id="@+id/item_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                android:text="@string/status" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_check_in2"
                android:text="@string/checkin"
                android:textSize="@dimen/_10sp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/rect_round_bg"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_15dp"
                android:paddingEnd="@dimen/_15dp"
                android:gravity="center"
                android:paddingTop="@dimen/_2dp"
                android:paddingBottom="@dimen/_2dp"
                android:layout_below="@+id/item_status2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_pickup2"
                android:text="@string/pending"
                android:layout_below="@+id/item_detail2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_pickup_date2"
                android:text="21-01-1989"
                android:layout_below="@+id/item_pickup2" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel3">

            <TextView
                android:id="@+id/item_detail3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/pending" />
            <TextView
                android:id="@+id/item_status3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_alignParentEnd="true"
                android:text="@string/status" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_check_in3"
                android:text="@string/checkin"
                android:textSize="@dimen/_10sp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/rect_round_bg"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_15dp"
                android:paddingEnd="@dimen/_15dp"
                android:gravity="center"
                android:paddingTop="@dimen/_2dp"
                android:paddingBottom="@dimen/_2dp"
                android:layout_below="@+id/item_status3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_pickup3"
                android:text="@string/pickup"
                android:layout_below="@+id/item_detail3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_pickup_date3"
                android:text="@string/pending"
                android:layout_below="@+id/item_pickup3" />


        </RelativeLayout>







    </RelativeLayout>
</androidx.cardview.widget.CardView>
