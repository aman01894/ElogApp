<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/drop_loc_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/bullet_red"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pick_up_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/bullet_green"
        android:visibility="gone" />

    <TextView
        android:layout_width="0dp"
        android:id="@+id/textLocation"
        style="@style/load_text_view_style"
        android:textColor="@color/BlackText"
        android:textStyle="normal" android:layout_weight="7"/>

    <ImageView
        android:id="@+id/mob_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_phone_black"
        android:visibility="visible"/>

    <TextView android:layout_width="0dp"
        android:id="@+id/textMobile"
        style="@style/load_text_view_style"
        android:textColor="@color/Blue"
        android:textStyle="normal" android:text="" android:layout_weight="3"/>
</LinearLayout>