<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/drop_loc_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/bullet_red"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/pick_up_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp"
        android:background="@drawable/bullet_green"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textLocation"
        style="@style/load_text_view_style"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:textColor="@color/BlackText"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mob_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_phone_black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textMobile"
                style="@style/load_text_view_style"
                android:text="sdfmlkdfmg"
                android:textColor="@color/Blue"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/status"
            android:layout_width="@dimen/_50dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_3dp"
            android:background="@drawable/rectangle_btn_bg_green"
            android:gravity="center"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>