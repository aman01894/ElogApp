<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dispatchViewmodel"
            type="com.example.elogapp.activity.ui.dispatch.DispatchHomeViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ui.dispatch.DispatchHomeFragment">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5dp"
            android:background="@color/Blue_700"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/_5dp"
                android:text="@string/dispatch"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/but_exit"
            android:layout_below="@+id/rel_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/pending_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/rect_btn"
                        android:elevation="@dimen/_5dp"
                        android:padding="@dimen/_15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/pending"
                            android:textColor="@color/black" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/open_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/rect_btn"
                        android:elevation="@dimen/_5dp"
                        android:padding="@dimen/_15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/openloads"
                            android:textColor="@color/black" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10dp"

                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/close_rel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/rect_btn"
                        android:elevation="@dimen/_5dp"
                        android:padding="@dimen/_15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/closeloads"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_document"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/rect_btn"
                        android:elevation="@dimen/_5dp"
                        android:padding="@dimen/_15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/documentloads"
                            android:textColor="@color/black" />
                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rel_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@color/Blue_700"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_5dp"
                        android:text="@string/payroll"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rel_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/rect_btn"
                        android:elevation="@dimen/_5dp"
                        android:padding="@dimen/_15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/paymenthistory"
                            android:textColor="@color/black" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rel_open_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/rect_btn"
                        android:elevation="@dimen/_5dp"
                        android:padding="@dimen/_15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/openpayment"
                            android:textColor="@color/black" />


                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/but_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/text_margin"
            android:text="Exit"
            android:visibility="invisible" />

    </RelativeLayout>
</layout>