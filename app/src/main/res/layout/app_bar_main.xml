<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ElogApp.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.ElogApp.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>




    <include layout="@layout/content_main" />


    <LinearLayout
        android:id="@+id/extend_btn_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="top|end"
        android:elevation="4dp">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/_5dp"
        android:text="Connect" android:textSize="8sp"
        app:backgroundTint="@android:color/transparent" />

    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>